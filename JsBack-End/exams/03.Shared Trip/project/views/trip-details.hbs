<main>
	<section class="py-5 details" id="trip-details-page">
		<div class="container">
			<div class="destination">
				<div>
					<span class="icon"><i
							class="fas fa-map-marked-alt"
						></i></span>
					<h5> from <span>Plovdiv</span> to <span>Burgas</span> </h5>
				</div>
				<div>
					<span class="icon"><i
							class="fas fa-calendar-alt"
						></i></span>
					<h5> <span>2021-07-07</span> at <span>10:40</span> </h5>
				</div>
			</div>
			<p class="line"></p>
			<div class="buddies-info">
				<i class="fas fa-users buddies"></i>
				<h5>Shared trip Buddies</h5>
				<div>
					<!-- if there are joined buddies for the current trip separate them with comma and space", " -->
					{{#if joinedBuddies}}
						<p>{{joinedBuddies}}</p>
					{{else}}
						<!-- If not display: -->
						<p>there are no buddies yet...</p>
					{{/if}}

				</div>
				<h5>Driver: <span>{{creator.email}}</span> </h5>
			</div>
			<p class="line"></p>
			<h5 class="brand">Car Brand: <span class="lead">Mercedes</span></h5>
			<div class="trip-info">
				<div>
					<img
						class="img-fluid rounded"
						src="{{carImage}}"
						alt="car-image"
					/>
				</div>
				<div class="trip-desc">
					<h5>Information about the trip</h5>
					<textarea class="lead" disabled>{{description}}</textarea>
					<h5>Price: <span class="lead">40</span> BGN</h5>

					<!-- if there are no logged in user do not show div with class actions  -->
					{{#if user}}
						<div class="actions">
							<!-- Only for logged user and creator to this trip -->
							{{#if isCreator}}
								<a
									href="/trip/delete/{{_id}}"
									class="btn btn-danger"
								>Delete this trip</a>
								<a
									href="/trip/edit/{{_id}}"
									class="btn btn-warning"
								>Edit this trip</a>
							{{/if}}

							<!-- logged in user with available seats -->
							{{#if user}}
								{{#if isNotDriver}}
									{{#if isAvailableSeats}}
										<a
											href="/trip/join/{{_id}}"
											class="btn btn-join"
										>Join now, [
											{{seats}}
											] seats left!</a>
									{{else}}
										<!-- logged in user with no available seats -->
										<span class="btn btn-secondary">No seats
											available! [0]</span>
									{{/if}}
								{{/if}}
							{{/if}}

							<!-- logged in user and has already joined the trip  -->
							{{#if isJoined}}
								<span class="btn btn-info">Already joined. Don't
									be late!</span>
							{{/if}}

						</div>
					{{/if}}

				</div>
			</div>
		</div>
	</section>
</main>